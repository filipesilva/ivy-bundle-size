{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../out-tsc/tsc-ivy",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types": []
  },
  "exclude": [
    "main.current.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": "ngtsc"
  }
}
